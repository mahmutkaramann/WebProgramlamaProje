@using YeniSalon.Extensions
@model IEnumerable<YeniSalon.Models.AIEgzersizOneri>

@{
    ViewData["Title"] = "Yapay Zeka Önerilerim";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-robot text-primary"></i> Yapay Zeka Önerilerim</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Öneri Al
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-robot fa-4x text-muted mb-3"></i>
                        <h3>Henüz yapay zeka öneriniz bulunmuyor</h3>
                        <p class="text-muted">İlk önerinizi almak için "Yeni Öneri Al" butonuna tıklayın.</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-@GetBadgeColor(item.IstekTipi)">
                                    @item.IstekTipi.GetDisplayName()
                                </span>
                                <small class="text-muted">@item.OlusturulmaTarihi.ToString("dd.MM.yyyy")</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                @if (!string.IsNullOrEmpty(item.Hedef))
                                {
                                    @item.Hedef
                                }
                                else
                                {
                                    @item.IstekTipi.GetDisplayName()
                                }
                            </h5>

                            @if (!string.IsNullOrEmpty(item.FotoUrl))
                            {
                                <div class="mb-3">
                                    <img src="@item.FotoUrl" class="img-fluid rounded" alt="Yüklenen fotoğraf">
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(item.AIGorselUrl))
                            {
                                <div class="mb-3">
                                    <img src="@item.AIGorselUrl" class="img-fluid rounded" alt="AI Görsel">
                                </div>
                            }

                            <p class="card-text">
                                @if (item.GirilenBilgi.Length > 150)
                                {
                                    @item.GirilenBilgi.Substring(0, 150)
                                                        }
                                else
                                {
                                    @item.GirilenBilgi
                                }
                            </p>

                            <div class="mt-2">
                                <small class="text-muted">
                                    @if (item.Yas.HasValue)
                                    {
                                        <span>Yaş: @item.Yas</span>
                                    }
                                    @if (item.Boy.HasValue)
                                    {
                                        <span> · Boy: @item.Boy cm</span>
                                    }
                                    @if (item.Kilo.HasValue)
                                    {
                                        <span> · Kilo: @item.Kilo kg</span>
                                    }
                                </small>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@item.OneriId" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Detay
                                </a>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Bu öneriyi silmek istediğinize emin misiniz?')">
                                    <input type="hidden" name="id" value="@item.OneriId" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Sil
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@functions {
    string GetBadgeColor(IstekTipi tip)
    {
        return tip switch
        {
            IstekTipi.EgzersizOnerisi => "primary",
            IstekTipi.DiyetOnerisi => "success",
            IstekTipi.GorselSimulasyon => "warning",
            IstekTipi.VucutAnalizi => "info",
            _ => "secondary"
        };
    }
}