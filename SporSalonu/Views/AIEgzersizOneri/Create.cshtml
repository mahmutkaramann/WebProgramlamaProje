@model YeniSalon.Controllers.AIEgzersizOneriViewModel

@{
    ViewData["Title"] = "Yapay Zeka Önerisi Al";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-robot text-primary"></i> Yapay Zeka Önerisi Al</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post" enctype="multipart/form-data" id="aiForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="IstekTipi" class="form-label"></label>
                                    <select asp-for="IstekTipi" class="form-select" id="istekTipi">
                                        <option value="">Seçiniz</option>
                                        <option value="@IstekTipi.EgzersizOnerisi">Egzersiz Önerisi</option>
                                        <option value="@IstekTipi.DiyetOnerisi">Diyet Önerisi</option>
                                        <option value="@IstekTipi.GorselSimulasyon">Görsel Simülasyon</option>
                                        <option value="@IstekTipi.VucutAnalizi">Vücut Analizi</option>
                                    </select>
                                    <span asp-validation-for="IstekTipi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Vücut Bilgileri -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Yas" class="form-label"></label>
                                    <input asp-for="Yas" class="form-control" type="number" min="10" max="100" id="yasInput">
                                    <span asp-validation-for="Yas" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Cinsiyet" class="form-label"></label>
                                    <select asp-for="Cinsiyet" class="form-select" id="cinsiyetSelect">
                                        <option value="">Seçiniz</option>
                                        <option value="@Cinsiyet.Erkek">Erkek</option>
                                        <option value="@Cinsiyet.Kadın">Kadın</option>
                                    </select>
                                    <span asp-validation-for="Cinsiyet" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Boy" class="form-label"></label>
                                    <input asp-for="Boy" class="form-control" type="number" min="100" max="250" id="boyInput">
                                    <span asp-validation-for="Boy" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Kilo" class="form-label"></label>
                                    <input asp-for="Kilo" class="form-control" type="number" step="0.1" min="30" max="200" id="kiloInput">
                                    <span asp-validation-for="Kilo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Fotoğraf Yükleme -->
                        <div class="mb-3" id="fotoSection" style="display: none;">
                            <label asp-for="Foto" class="form-label">Fotoğraf Yükle</label>
                            <input asp-for="Foto" class="form-control" type="file" accept="image/*" id="fotoInput">
                            <small class="text-muted">Sadece Vücut Analizi için gereklidir. Max 5MB</small>
                            <span asp-validation-for="Foto" class="text-danger"></span>
                            <div class="mt-2" id="fotoPreview"></div>
                        </div>

                        <!-- Hedef Alanı -->
                        <div class="mb-3">
                            <label asp-for="Hedef" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Hedef" class="form-control" placeholder="Örn: Kilo vermek, kas yapmak, fit kalmak..." id="hedefInput">
                                <button type="button" class="btn btn-outline-primary" id="quickSuggestionBtn">
                                    <i class="fas fa-bolt"></i> Hızlı Öneri
                                </button>
                            </div>
                            <small class="text-muted">Hızlı öneri için önce bir hedef girin ve butona tıklayın</small>
                            <span asp-validation-for="Hedef" class="text-danger"></span>
                        </div>

                        <!-- Girilen Bilgi -->
                        <div class="mb-3">
                            <label asp-for="GirilenBilgi" class="form-label">
                                <span id="bilgiLabel">Açıklama / Soru</span>
                                <span class="text-muted ms-2" id="charCount">(0/2000 karakter)</span>
                            </label>
                            <textarea asp-for="GirilenBilgi" class="form-control" rows="6" id="girilenBilgiTextarea"
                                      placeholder="Detaylı bilgi verirseniz daha iyi öneriler alabilirsiniz..."></textarea>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-lightbulb"></i> İpucu: Mevcut egzersiz rutininiz, sağlık durumunuz,
                                    kısıtlamalarınız veya özel hedefleriniz hakkında bilgi verin.
                                </small>
                            </div>
                            <span asp-validation-for="GirilenBilgi" class="text-danger"></span>
                        </div>

                        <!-- Bilgi Notları -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <div class="d-flex">
                                        <i class="fas fa-info-circle fa-2x me-3"></i>
                                        <div>
                                            <h6 class="alert-heading"><strong>Önemli Bilgiler:</strong></h6>
                                            <ul class="mb-0 ps-3">
                                                <li>Yapay zeka önerileri kişiselleştirilmiş tavsiyelerdir</li>
                                                <li>Profesyonel tıbbi öneri yerine geçmez</li>
                                                <li>Önemli sağlık sorunlarınız varsa doktorunuza danışın</li>
                                                <li>Oluşturulan öneriler kaydedilir ve geçmişinizde görüntülenebilir</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Gönder Butonları -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="fas fa-robot"></i> Yapay Zekaya Sor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // İstek tipine göre fotoğraf bölümünü göster/gizle
            $('#istekTipi').change(function() {
                var selectedType = $(this).val();
                var isVucutAnalizi = selectedType === '@IstekTipi.VucutAnalizi';

                if (isVucutAnalizi) {
                    $('#fotoSection').slideDown(300);
                    $('#fotoInput').prop('required', true);
                    $('#bilgiLabel').text('Ek Açıklama (OPSİYONEL)');
                    $('#girilenBilgiTextarea').attr('placeholder', 'Eklemek istediğiniz özel notlar...');
                } else {
                    $('#fotoSection').slideUp(300);
                    $('#fotoInput').prop('required', false);
                    $('#bilgiLabel').text('Açıklama / Soru');
                    $('#girilenBilgiTextarea').attr('placeholder', 'Detaylı bilgi verirseniz daha iyi öneriler alabilirsiniz...');
                }

                // Görsel simülasyon için özel mesaj
                if (selectedType === '@IstekTipi.GorselSimulasyon') {
                    $('#bilgiLabel').text('Görsel Açıklaması');
                    $('#girilenBilgiTextarea').attr('placeholder', 'Oluşturulmasını istediğiniz görselin detaylı açıklamasını yazın...');
                }
            });

            // Karakter sayacı
            $('#girilenBilgiTextarea').on('input', function() {
                var length = $(this).val().length;
                var remaining = 2000 - length;
                $('#charCount').text('(' + length + '/2000 karakter)');

                if (remaining < 0) {
                    $('#charCount').addClass('text-danger');
                } else if (remaining < 100) {
                    $('#charCount').addClass('text-warning');
                } else {
                    $('#charCount').removeClass('text-danger text-warning');
                }
            });

            // Fotoğraf önizleme
            $('#fotoInput').change(function(e) {
                var file = e.target.files[0];
                if (file) {
                    if (file.size > 5 * 1024 * 1024) {
                        alert('Dosya boyutu 5MB\'dan küçük olmalıdır.');
                        $(this).val('');
                        $('#fotoPreview').html('');
                        return;
                    }

                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#fotoPreview').html(
                            '<div class="mt-2">' +
                            '<img src="' + e.target.result + '" class="img-thumbnail" style="max-height: 200px;">' +
                            '<small class="d-block text-muted mt-1">Önizleme: ' + file.name + ' (' + Math.round(file.size / 1024) + ' KB)</small>' +
                            '</div>'
                        );
                    };
                    reader.readAsDataURL(file);
                } else {
                    $('#fotoPreview').html('');
                }
            });

            // Hızlı öneri butonu
            $('#quickSuggestionBtn').click(function() {
                var hedef = $('#hedefInput').val().trim();
                var yas = $('#yasInput').val();
                var cinsiyet = $('#cinsiyetSelect').val();
                var boy = $('#boyInput').val();
                var kilo = $('#kiloInput').val();
                var istekTipi = $('#istekTipi').val();

                if (!hedef) {
                    showAlert('Lütfen bir hedef giriniz.', 'warning');
                    $('#hedefInput').focus();
                    return;
                }

                // Butonu devre dışı bırak
                var $btn = $(this);
                $btn.prop('disabled', true);
                $btn.html('<i class="fas fa-spinner fa-spin"></i> İşleniyor...');

                // Örnek prompt oluştur
                var prompt = "Hedefim: " + hedef + "\n";
                if (yas) prompt += "Yaşım: " + yas + "\n";
                if (cinsiyet) prompt += "Cinsiyetim: " + (cinsiyet === '@Cinsiyet.Erkek' ? 'Erkek' : 'Kadın') + "\n";
                if (boy) prompt += "Boyum: " + boy + " cm\n";
                if (kilo) prompt += "Kilo: " + kilo + " kg\n\n";

                // İstek tipine göre prompt düzenle
                if (istekTipi === '@IstekTipi.EgzersizOnerisi') {
                    prompt += "Bu bilgilere göre bana uygun bir egzersiz programı önerir misin?";
                } else if (istekTipi === '@IstekTipi.DiyetOnerisi') {
                    prompt += "Bu bilgilere göre bana uygun bir beslenme programı önerir misin?";
                } else {
                    prompt += "Bu hedefime ulaşmak için ne yapmalıyım?";
                }

                // Prompt'u textarea'ya ekle
                $('#girilenBilgiTextarea').val(prompt).trigger('input');

                // Butonu eski haline getir
                setTimeout(function() {
                    $btn.prop('disabled', false);
                    $btn.html('<i class="fas fa-bolt"></i> Hızlı Öneri');
                    showAlert('Hızlı öneri metni oluşturuldu! Dilediğiniz gibi düzenleyebilirsiniz.', 'success');
                }, 1000);
            });

            // AJAX hızlı öneri (isteğe bağlı - backend hazırsa kullanın)
            function quickSuggestionAjax() {
                var goal = $('#hedefInput').val();
                var age = $('#yasInput').val();
                var gender = $('#cinsiyetSelect').val();
                var height = $('#boyInput').val();
                var weight = $('#kiloInput').val();

                $.ajax({
                    url: '@Url.Action("QuickExerciseSuggestion", "AIEgzersizOneri")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        goal: goal,
                        age: age,
                        gender: gender,
                        height: height,
                        weight: weight
                    }),
                    success: function(response) {
                        if (response.success) {
                            $('#girilenBilgiTextarea').val(response.response);
                            showAlert('Hızlı öneri başarıyla alındı!', 'success');
                        } else {
                            showAlert('Bir hata oluştu: ' + response.error, 'danger');
                        }
                    },
                    error: function() {
                        showAlert('Sunucu hatası. Lütfen tekrar deneyin.', 'danger');
                    }
                });
            }

            // Form gönderim butonunu yönet
            $('#aiForm').on('submit', function() {
                var istekTipi = $('#istekTipi').val();
                var girilenBilgi = $('#girilenBilgiTextarea').val().trim();

                if (!istekTipi) {
                    showAlert('Lütfen bir istek tipi seçiniz.', 'warning');
                    return false;
                }

                // Vücut analizi için fotoğraf kontrolü
                if (istekTipi === '@IstekTipi.VucutAnalizi' && $('#fotoInput').val() === '') {
                    showAlert('Vücut analizi için fotoğraf yüklemelisiniz.', 'warning');
                    return false;
                }

                // Temel açıklama kontrolü (vücut analizi hariç)
                if (istekTipi !== '@IstekTipi.VucutAnalizi' && !girilenBilgi) {
                    showAlert('Lütfen bir açıklama veya soru giriniz.', 'warning');
                    return false;
                }

                // Butonu devre dışı bırak ve yükleme göster
                $('#submitBtn').prop('disabled', true);
                $('#submitBtn').html('<i class="fas fa-spinner fa-spin"></i> İşleniyor...');

                return true;
            });

            // Bildirim gösterme fonksiyonu
            function showAlert(message, type) {
                var alertClass = 'alert-' + type;
                var icon = type === 'success' ? 'fa-check-circle' :
                          type === 'warning' ? 'fa-exclamation-triangle' :
                          type === 'danger' ? 'fa-exclamation-circle' : 'fa-info-circle';

                // Mevcut alert'leri temizle
                $('.alert-dismissible:not(.alert-info)').remove();

                // Yeni alert oluştur
                var alertHtml = '<div class="alert ' + alertClass + ' alert-dismissible fade show" role="alert">' +
                               '<i class="fas ' + icon + '"></i> ' + message +
                               '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                               '</div>';

                $('.card-body').prepend(alertHtml);

                // Otomatik kapanma
                setTimeout(function() {
                    $('.alert-dismissible').alert('close');
                }, 5000);
            }

            // İlk yüklemede istek tipini kontrol et
            var initialType = $('#istekTipi').val();
            if (initialType === '@IstekTipi.VucutAnalizi') {
                $('#fotoSection').show();
                $('#fotoInput').prop('required', true);
                $('#bilgiLabel').text('Ek Açıklama (OPSİYONEL)');
                $('#girilenBilgiTextarea').attr('placeholder', 'Eklemek istediğiniz özel notlar...');
            }

            // Karakter sayacını başlat
            $('#girilenBilgiTextarea').trigger('input');
        });
    </script>

    <style>
        #quickSuggestionBtn:hover {
            background-color: #0d6efd;
            color: white;
            transition: all 0.3s ease;
        }

        #submitBtn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .card {
            border: none;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        #fotoPreview img {
            max-width: 100%;
            height: auto;
            border: 2px solid #dee2e6;
        }
    </style>
}