@model IEnumerable<YeniSalon.Models.Antrenor>
@using YeniSalon.Extensions
@{
    ViewData["Title"] = "Antrenör Listesi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Antrenörler</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Antrenör
            </a>
        </div>
    </div>

    <!-- Filtreleme -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control"
                           placeholder="Arama..." value="@ViewBag.Search">
                </div>
                <div class="col-md-3">
                    <select name="cinsiyet" class="form-select">
                        <option value="">Tüm Cinsiyetler</option>
                        @foreach (SelectListItem item in ViewBag.CinsiyetListesi)
                        {
                            <option value="@item.Value" selected="@(ViewBag.Cinsiyet == item.Value)">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="aktifMi" class="form-select" onchange="this.form.submit()">
                        <option value="true" selected="@(ViewBag.AktifMi == true)">Aktif Antrenörler</option>
                        <option value="false" selected="@(ViewBag.AktifMi == false)">Pasif Antrenörler</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Ara
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Antrenör Listesi -->
    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>Antrenör bulunamadı</h4>
                    <p class="mb-0">Yeni antrenör eklemek için "Yeni Antrenör" butonuna tıklayın.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <a asp-action="Index"
                                       asp-route-sortBy="Ad"
                                       asp-route-sortOrder="@(ViewBag.SortBy == "Ad" && ViewBag.SortOrder == "asc" ? "desc" : "asc")"
                                       asp-route-search="@ViewBag.Search"
                                       asp-route-cinsiyet="@ViewBag.Cinsiyet"
                                       asp-route-aktifMi="@ViewBag.AktifMi"
                                       class="text-decoration-none">
                                        Ad
                                        @if (ViewBag.SortBy == "Ad")
                                        {
                                            <i class="fas fa-sort-@(ViewBag.SortOrder == "asc" ? "up" : "down")"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort"></i>
                                        }
                                    </a>
                                </th>
                                <th>Soyad</th>
                                <th>TC Kimlik No</th>
                                <th>Salon</th>
                                <th>Cinsiyet</th>
                                <th>Deneyim (Yıl)</th>
                                <th>Uzmanlık</th>
                                <th>Durum</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.ProfilFotoUrl))
                                            {
                                                <img src="@item.ProfilFotoUrl" alt="Profil"
                                                     class="rounded-circle me-2" style="width: 40px; height: 40px;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2"
                                                     style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                            }
                                            <span>@item.Ad</span>
                                        </div>
                                    </td>
                                    <td>@item.Soyad</td>
                                    <td>@item.TCKimlikNo</td>
                                    <td>
                                        @if (item.Salon != null)
                                        {
                                            <span class="badge bg-info">@item.Salon.SalonAdi</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Atanmamış</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@(item.Cinsiyet == YeniSalon.Models.Cinsiyet.Erkek ? "primary" : "danger")">
                                            @item.Cinsiyet
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.DeneyimYili yıl</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.UzmanlikAlanlari))
                                        {
                                            <small>@item.UzmanlikAlanlari.Truncate(30)</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.AktifMi)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.AntrenorId"
                                               class="btn btn-sm btn-info" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.AntrenorId"
                                               class="btn btn-sm btn-warning" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.AntrenorId"
                                               class="btn btn-sm btn-danger" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Sayfalama -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="Sayfalama">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-search="@ViewBag.Search"
                                       asp-route-cinsiyet="@ViewBag.Cinsiyet"
                                       asp-route-aktifMi="@ViewBag.AktifMi"
                                       asp-route-sortBy="@ViewBag.SortBy"
                                       asp-route-sortOrder="@ViewBag.SortOrder">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>

    <!-- İstatistikler -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Toplam Antrenör</h6>
                            <h3 class="mb-0">@ViewBag.TotalRecords</h3>
                        </div>
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Aktif Antrenör</h6>
                            <h3 class="mb-0">@Model.Count(a => a.AktifMi)</h3>
                        </div>
                        <i class="fas fa-user-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Erkek</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Cinsiyet == YeniSalon.Models.Cinsiyet.Erkek)</h3>
                        </div>
                        <i class="fas fa-male fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Kadın</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Cinsiyet == YeniSalon.Models.Cinsiyet.Kadın)</h3>
                        </div>
                        <i class="fas fa-female fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // String truncate extension
        String.prototype.Truncate = function(maxLength) {
            if (this.length <= maxLength) return this;
            return this.substring(0, maxLength) + '...';
        };
    </script>
}