@model YeniSalon.Models.Antrenor
@{
    ViewData["Title"] = "Yeni Antrenör";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Yeni Antrenör Ekle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <!-- Kişisel Bilgiler -->
                            <div class="col-md-6">
                                <h5 class="mb-3 border-bottom pb-2">Kişisel Bilgiler</h5>

                                <div class="mb-3">
                                    <label asp-for="Ad" class="form-label"></label>
                                    <input asp-for="Ad" class="form-control" />
                                    <span asp-validation-for="Ad" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Soyad" class="form-label"></label>
                                    <input asp-for="Soyad" class="form-control" />
                                    <span asp-validation-for="Soyad" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TCKimlikNo" class="form-label"></label>
                                    <input asp-for="TCKimlikNo" class="form-control" maxlength="11" />
                                    <span asp-validation-for="TCKimlikNo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DogumTarihi" class="form-label"></label>
                                    <input asp-for="DogumTarihi" type="date" class="form-control" />
                                    <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Cinsiyet" class="form-label"></label>
                                    <select asp-for="Cinsiyet" class="form-select">
                                        <option value="">Seçiniz</option>
                                        <option value="Erkek">Erkek</option>
                                        <option value="Kadın">Kadın</option>
                                    </select>
                                    <span asp-validation-for="Cinsiyet" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- İletişim ve Salon Bilgileri -->
                            <div class="col-md-6">
                                <h5 class="mb-3 border-bottom pb-2">İletişim ve Çalışma Bilgileri</h5>

                                <div class="mb-3">
                                    <label asp-for="Adres" class="form-label"></label>
                                    <textarea asp-for="Adres" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Adres" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SalonId" class="form-label"></label>
                                    <select asp-for="SalonId" class="form-select">
                                        <option value="">Salon Seçiniz</option>
                                        @foreach (var salon in (List<SelectListItem>)ViewBag.Salonlar)
                                        {
                                            <option value="@salon.Value" selected="@(salon.Selected)">
                                                @salon.Text
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="SalonId" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DeneyimYili" class="form-label"></label>
                                        <input asp-for="DeneyimYili" class="form-control" min="0" max="50" />
                                        <span asp-validation-for="DeneyimYili" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="HaftalikCalismaSaati" class="form-label"></label>
                                        <input asp-for="HaftalikCalismaSaati" class="form-control" min="0" max="168" />
                                        <span asp-validation-for="HaftalikCalismaSaati" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SaatlikUcret" class="form-label"></label>
                                    <input asp-for="SaatlikUcret" class="form-control" />
                                    <span asp-validation-for="SaatlikUcret" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ProfilFotoUrl" class="form-label"></label>
                                    <input asp-for="ProfilFotoUrl" class="form-control" />
                                    <span asp-validation-for="ProfilFotoUrl" class="text-danger"></span>
                                    <small class="text-muted">Profil fotoğrafı URL'si (isteğe bağlı)</small>
                                </div>
                            </div>
                        </div>

                        <!-- Uzmanlık ve Açıklama -->
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <h5 class="mb-3 border-bottom pb-2">Uzmanlık ve Açıklama</h5>

                                <div class="mb-3">
                                    <label asp-for="UzmanlikAlanlari" class="form-label"></label>
                                    <input asp-for="UzmanlikAlanlari" class="form-control"
                                           placeholder="Örn: Fitness, Yoga, Pilates, Zumba" />
                                    <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Aciklama" class="form-label"></label>
                                    <textarea asp-for="Aciklama" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // TC Kimlik No formatı
            $('#TCKimlikNo').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });

            // Saatlik ücret formatı
            $('#SaatlikUcret').on('input', function() {
                var value = $(this).val().replace(/[^\d.]/g, '');
                $(this).val(value);
            });
        });
    </script>
}