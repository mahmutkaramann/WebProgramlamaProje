@model SporSalonu.Models.Antrenorler

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<h1>Antrenör Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AntId" />
            <div class="form-group">
                <label asp-for="AntAd" class="control-label"></label>
                <input asp-for="AntAd" class="form-control" />
                <span asp-validation-for="AntAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AntSoyad" class="control-label"></label>
                <input asp-for="AntSoyad" class="form-control" />
                <span asp-validation-for="AntSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AntUzmanlik" class="control-label"></label>
                <input asp-for="AntUzmanlik" class="form-control" />
                <span asp-validation-for="AntUzmanlik" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}