@model YeniSalon.Controllers.ProfileViewModel
@{
    ViewData["Title"] = "Profilim";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container mt-5">
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <!-- Profil Bilgileri Kartı -->
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilFotoUrl))
                    {
                        <img src="@Model.ProfilFotoUrl" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="Profil Fotoğrafı">
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px;">
                            <span class="text-white fs-1">@Model.Ad?[0]@Model.Soyad?[0]</span>
                        </div>
                    }

                    <h4 class="card-title">@Model.Ad @Model.Soyad</h4>
                    <p class="text-muted">@Model.Email</p>

                    @if (isAdmin)
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">Üye</span>
                    }

                    <!-- Üyelik Durumu -->
                    @if (Model.UyelikBitis.HasValue && Model.UyelikBitis > DateTime.Now)
                    {
                        <div class="mt-3">
                            <small class="text-muted">Üyelik Bitiş: @Model.UyelikBitis.Value.ToString("dd.MM.yyyy")</small>
                            @if ((Model.UyelikBitis.Value - DateTime.Now).Days <= 7)
                            {
                                <span class="badge bg-warning ms-2">Yakında Bitiyor</span>
                            }
                        </div>
                    }

                    <!-- Admin için hızlı linkler -->
                    @if (isAdmin)
                    {
                        <hr>
                        <div class="d-grid gap-2">
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-tachometer-alt"></i> Admin Paneli
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Vücut Ölçüleri Kartı -->
            @if (!isAdmin && (Model.Boy.HasValue || Model.Kilo.HasValue))
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0">Vücut Ölçüleri</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Boy.HasValue)
                        {
                            <div class="mb-2">
                                <small class="text-muted">Boy</small>
                                <div>@Model.Boy.Value cm</div>
                            </div>
                        }
                        @if (Model.Kilo.HasValue)
                        {
                            <div>
                                <small class="text-muted">Kilo</small>
                                <div>@Model.Kilo.Value kg</div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-md-8">
            <!-- Profil Güncelleme Formu -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Profil Bilgilerini Güncelle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- Kişisel Bilgiler -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label"></label>
                                <input asp-for="Ad" class="form-control" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Soyad" class="form-label"></label>
                                <input asp-for="Soyad" class="form-control" />
                                <span asp-validation-for="Soyad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <small class="text-muted">E-posta adresinizi değiştirmek için yönetici ile iletişime geçin.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Adres" class="form-label"></label>
                            <textarea asp-for="Adres" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>

                        <!-- Admin için ekstra alanlar -->
                        @if (isAdmin)
                        {
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TCKimlikNo" class="form-label"></label>
                                    <input asp-for="TCKimlikNo" class="form-control" readonly />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="DogumTarihi" class="form-label"></label>
                                    <input asp-for="DogumTarihi" class="form-control" type="date" readonly />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Cinsiyet" class="form-label"></label>
                                <select asp-for="Cinsiyet" class="form-select" readonly>
                                    <option value="">Seçiniz</option>
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                </select>
                            </div>
                        }
                        else
                        {
                            <!-- Üye için vücut ölçüleri -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Boy" class="form-label"></label>
                                    <input asp-for="Boy" class="form-control" type="number" min="100" max="250" />
                                    <span asp-validation-for="Boy" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Kilo" class="form-label"></label>
                                    <input asp-for="Kilo" class="form-control" type="number" step="0.1" min="30" max="200" />
                                    <span asp-validation-for="Kilo" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="UyelikTuru" class="form-label"></label>
                                <select asp-for="UyelikTuru" class="form-select">
                                    <option value="">Seçiniz</option>
                                    <option value="Aylik">Aylık</option>
                                    <option value="UcAylik">3 Aylık</option>
                                    <option value="AltıAylik">6 Aylık</option>
                                    <option value="Yillik">Yıllık</option>
                                </select>
                            </div>
                        }

                        <!-- Profil Fotoğrafı -->
                        <div class="mb-3">
                            <label asp-for="ProfilFotoUrl" class="form-label"></label>
                            <input asp-for="ProfilFotoUrl" class="form-control" placeholder="https://example.com/profil-foto.jpg" />
                            <small class="text-muted">Profil fotoğrafı için bir URL girin</small>
                        </div>

                        <!-- Readonly bilgiler -->
                        @if (!isAdmin)
                        {
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">TC No</label>
                                    <input value="@Model.TCKimlikNo.ToString()" class="form-control" readonly />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Doğum Tarihi</label>
                                    <input value="@Model.DogumTarihi.ToString("dd.MM.yyyy")" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Cinsiyet</label>
                                <input value="@Model.Cinsiyet" class="form-control" readonly />
                            </div>
                        }

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary ms-2">
                                <i class="fas fa-home"></i> Ana Sayfa
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Admin için ekstra bilgiler -->
            @if (isAdmin)
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-shield-alt"></i> Admin Bilgileri</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <small class="text-muted">Admin Olma Tarihi</small>
                                    <div>@DateTime.Now.ToString("dd.MM.yyyy")</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <small class="text-muted">Son Giriş Tarihi</small>
                                    <div>@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Üye için üyelik bilgileri -->
                @if (Model.UyelikBaslangic.HasValue || Model.UyelikBitis.HasValue)
                {
                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-id-card"></i> Üyelik Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @if (Model.UyelikBaslangic.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="mb-2">
                                            <small class="text-muted">Üyelik Başlangıç</small>
                                            <div>@Model.UyelikBaslangic.Value.ToString("dd.MM.yyyy")</div>
                                        </div>
                                    </div>
                                }
                                @if (Model.UyelikBitis.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="mb-2">
                                            <small class="text-muted">Üyelik Bitiş</small>
                                            <div class="@((Model.UyelikBitis.Value < DateTime.Now) ? "text-danger" : "")">
                                                @Model.UyelikBitis.Value.ToString("dd.MM.yyyy")
                                                @if (Model.UyelikBitis.Value < DateTime.Now)
                                                {
                                                    <span class="badge bg-danger ms-2">Süresi Doldu</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}