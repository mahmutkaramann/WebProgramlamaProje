@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spor Salonu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- UyeRandevu'daki randevu oluşturma için -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dumbbell"></i> Spor Salonu
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="UyeRandevu" asp-action="Index">Randevularım</a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Admin İşlemleri
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Antrenor" asp-action="Index">Antrenörler</a></li>
                                        <li><a class="dropdown-item" asp-controller="Hizmet" asp-action="Index">Hizmetler</a></li>
                                        <li><a class="dropdown-item" asp-controller="Randevu" asp-action="TumRandevular">Tüm Randevular</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Kullanicilar">Kullanıcılar</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Antrenor" asp-action="Index">Antrenörler</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Hakkımızda</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="AIEgzersizOneri" asp-action="Index">
                                    <i class="fas fa-robot"></i> AI Öneriler
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white py-3">
        <div class="container">
            <div class="row g-3 mb-2">
                <!-- İletişim Bilgileri -->
                <div class="col-lg-4 col-md-6">
                    <h5 class="mb-2">
                        <span class="text-warning fw-bold">Spor </span><span class="text-secondary fw-bold">Salonu </span>
                    </h5>
                    <div class="contact-info">
                        <div class="d-flex align-items-start mb-1">
                            <i class="fas fa-map-marker-alt text-warning me-2 mt-1" style="font-size: 0.8rem; width: 16px;"></i>
                            <span class="text-muted">Serdivan / Sakarya</span>
                        </div>
                        <div class="d-flex align-items-center mb-1">
                            <i class="fas fa-phone text-warning me-2" style="font-size: 0.8rem; width: 16px;"></i>
                            <span class="text-muted">(555) 555 55 55 </span>
                        </div>
                        <div class="d-flex align-items-center mb-1">
                            <i class="fas fa-envelope text-warning me-2" style="font-size: 0.8rem; width: 16px;"></i>
                            <span class="text-muted">sporsalonu@gmail.com</span>
                        </div>
                        <div class="d-flex align-items-start">
                            <i class="fas fa-clock text-warning me-2 mt-1" style="font-size: 0.8rem; width: 16px;"></i>
                            <div>
                                <div class="text-muted">Pzt-Cmt: 06:00-23:00</div>
                                <div class="text-muted">Pazar: 08:00-20:00</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hızlı Bağlantılar -->
                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-bold">Hızlı Bağlantılar</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <a asp-controller="Home" asp-action="About" class="text-muted text-decoration-none">
                                Hakkımızda
                            </a>
                        </li>
                        <li class="mb-1">
                            <a asp-controller="Services" asp-action="Index" class="text-muted text-decoration-none">
                                Hizmetlerimiz
                            </a>
                        </li>
                        <li class="mb-1">
                            <a asp-controller="Pricing" asp-action="Index" class="text-muted text-decoration-none">
                                Fiyatlar
                            </a>
                        </li>
                        <li class="mb-1">
                            <a asp-controller="Tools" asp-action="Index" class="text-muted text-decoration-none">
                                Hesaplama Araçları
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Alt Çizgi -->
            <hr class="my-2">

            <!-- Alt Kısım -->
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    <p class="text-light mb-0">
                        &copy; 2025 SporSalonu. Mahmut Karaman
                    </p>
                </div>
                
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>