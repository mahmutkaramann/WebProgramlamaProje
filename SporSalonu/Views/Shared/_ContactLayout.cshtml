<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SporSalonu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
    <!-- <link rel="stylesheet" href="~/SporSalonu.styles.css" asp-append-version="true" /> -->
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header class="headerclass">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-danger border-bottom box-shadow mb-3
                    navbar-expand-sm navbar-toggleable-sm sports-header larger-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="#" asp-action="#">Hizmetler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="#" asp-action="#">Antrenör Listesi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Bölümü -->
    <footer class="footer text-white py-3">
        <div class="container">
            <div class="row g-3 mb-2">
                <!-- İletişim Bilgileri -->
                <div class="col-lg-4 col-md-6">
                    <h5 class="mb-2">
                        <span class="text-warning fw-bold">Spor </span><span class="text-secondary fw-bold">Salonu </span>
                    </h5>
                    <div class="contact-info">
                        <div class="d-flex align-items-start mb-1">
                            <i class="fas fa-map-marker-alt text-warning me-2 mt-1" style="font-size: 0.8rem; width: 16px;"></i>
                            <span class="text-muted">Serdivan / Sakarya</span>
                        </div>
                        <div class="d-flex align-items-center mb-1">
                            <i class="fas fa-phone text-warning me-2" style="font-size: 0.8rem; width: 16px;"></i>
                            <span class="text-muted">(555) 555 55 55 </span>
                        </div>
                        <div class="d-flex align-items-center mb-1">
                            <i class="fas fa-envelope text-warning me-2" style="font-size: 0.8rem; width: 16px;"></i>
                            <span class="text-muted">sporsalonu@gmail.com</span>
                        </div>
                        <div class="d-flex align-items-start">
                            <i class="fas fa-clock text-warning me-2 mt-1" style="font-size: 0.8rem; width: 16px;"></i>
                            <div>
                                <div class="text-muted">Pzt-Cmt: 06:00-23:00</div>
                                <div class="text-muted">Pazar: 08:00-20:00</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hızlı Bağlantılar -->
                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-bold">Hızlı Bağlantılar</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <a asp-controller="Home" asp-action="About" class="text-muted text-decoration-none">
                                Hakkımızda
                            </a>
                        </li>
                        <li class="mb-1">
                            <a asp-controller="Services" asp-action="Index" class="text-muted text-decoration-none">
                                Hizmetlerimiz
                            </a>
                        </li>
                        <li class="mb-1">
                            <a asp-controller="Pricing" asp-action="Index" class="text-muted text-decoration-none">
                                Fiyatlar
                            </a>
                        </li>
                        <li class="mb-1">
                            <a asp-controller="Tools" asp-action="Index" class="text-muted text-decoration-none">
                                Hesaplama Araçları
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Bülten -->
                <div class="col-lg-5 col-md-12">
                    <div class="newsletter-box p-3">
                        <h6 class="fw-bold mb-2">BİZE KATILIN</h6>
                        <p class="text-muted mb-2">Alanında uzman atrenörlerle çalışın.</p>
                        <form class="d-flex gap-2">
                            <input type="email" class="form-control form-control-sm" placeholder="E-posta adresiniz" required>
                            <button class="btn btn-warning btn-sm px-3" type="submit">
                                <i class="fas fa-paper-plane me-1"></i> Katıl
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Alt Çizgi -->
            <hr class="my-2">

            <!-- Alt Kısım -->
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    <p class="text-light mb-0">
                        &copy; 2025 SporSalonu. Mahmut Karaman
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item me-3">
                            <a asp-controller="Home" asp-action="Terms" class="text-muted text-decoration-none">
                                Kullanım Şartları
                            </a>
                        </li>
                        <li class="list-inline-item me-3">
                            <a asp-controller="Home" asp-action="Sitemap" class="text-muted text-decoration-none">
                                Site Haritası
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a asp-controller="Career" asp-action="Index" class="text-muted text-decoration-none">
                                Kariyer
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/contact.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
