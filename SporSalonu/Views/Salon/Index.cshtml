@section Scripts {
    <script>
        function showApiEndpoints() {
            new bootstrap.Modal(document.getElementById('apiEndpointsModal')).show();
        }

        // API testi yap
        async function testApi() {
            try {
                const response = await fetch('/api/SalonApi');
                const data = await response.json();
                console.log('API Test Başarılı:', data);
                alert('API bağlantısı başarılı!');
            } catch (error) {
                console.error('API Test Hatası:', error);
                alert('API bağlantısı başarısız!');
            }
        }
    </script>
}