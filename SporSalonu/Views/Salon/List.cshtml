@{
    ViewData["Title"] = "Salonlar Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-building me-2"></i>@ViewData["Title"]
                        </h4>
                        <a href="/Salon/Create" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i>Yeni Salon
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Filtreler -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" id="searchInput" class="form-control" placeholder="Ara...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select id="sortBy" class="form-select">
                                <option value="SalonAdi">Sırala: Salon Adı</option>
                                <option value="Adres">Sırala: Adres</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select id="sortOrder" class="form-select">
                                <option value="asc">Artan</option>
                                <option value="desc">Azalan</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select id="pageSize" class="form-select">
                                <option value="10">10 kayıt</option>
                                <option value="25">25 kayıt</option>
                                <option value="50">50 kayıt</option>
                                <option value="100">100 kayıt</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            <button id="filterBtn" class="btn btn-primary w-100">
                                <i class="fas fa-filter"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Tablo -->
                    <div class="table-responsive">
                        <table class="table table-hover" id="salonTable">
                            <thead>
                                <tr>
                                    <th>Salon Adı</th>
                                    <th>Adres</th>
                                    <th>Telefon</th>
                                    <th>E-posta</th>
                                    <th>Çalışma Saatleri</th>
                                    <th>Antrenör</th>
                                    <th>Hizmet</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody id="salonTableBody">
                                <!-- API'den gelen veriler buraya eklenecek -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Sayfalama -->
                    <nav aria-label="Sayfalama" class="mt-3">
                        <ul class="pagination justify-content-center" id="pagination">
                            <!-- Sayfalama linkleri buraya eklenecek -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Silme Onayı -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Salon Sil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bu salonu silmek istediğinize emin misiniz?</p>
                <p class="text-danger"><small>Bu işlem geri alınamaz!</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/salonList.js"></script>
}