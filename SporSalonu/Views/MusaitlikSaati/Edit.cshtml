@model YeniSalon.Models.MusaitlikSaati
@{
    ViewData["Title"] = "Müsaitlik Saati Düzenle";
    var gunler = ViewBag.Gunler as List<SelectListItem>;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Müsaitlik Saati Düzenle</h3>
                </div>
                <div class="card-body">
                    <!-- Antrenör Bilgileri -->
                    @if (Model.Antrenor != null)
                    {
                        <div class="alert alert-info mb-4">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5>@Model.Antrenor.Ad @Model.Antrenor.Soyad</h5>
                                    <p class="mb-1"><strong>Uzmanlık:</strong> @Model.Antrenor.UzmanlikAlanlari</p>
                                    <p class="mb-0"><strong>Deneyim:</strong> @Model.Antrenor.DeneyimYili yıl</p>
                                </div>
                                <div class="col-md-4 text-end">
                                    @if (!string.IsNullOrEmpty(Model.Antrenor.ProfilFotoUrl))
                                    {
                                        <img src="@Model.Antrenor.ProfilFotoUrl" alt="Profil Fotoğrafı" class="img-thumbnail" style="width: 80px; height: 80px;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center d-inline-block"
                                             style="width: 80px; height: 80px;">
                                            <i class="fas fa-user fa-2x"></i>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="MusaitlikId" />
                        <input type="hidden" asp-for="AntrenorId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Gun" class="form-label"></label>
                                    <select asp-for="Gun" class="form-select" id="gunSelect">
                                        <option value="">Gün Seçiniz</option>
                                        @foreach (var gun in gunler)
                                        {
                                            <option value="@gun.Value" selected="@gun.Selected">
                                                @gun.Text
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="Gun" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Saat Aralığı</label>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label small">Başlangıç</label>
                                            <input asp-for="BaslangicSaati" type="time" class="form-control"
                                                   step="900" id="baslangicSaati"
                                                   value="@Model.BaslangicSaati.ToString(@"hh\:mm")" />
                                            <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label small">Bitiş</label>
                                            <input asp-for="BitisSaati" type="time" class="form-control"
                                                   step="900" id="bitisSaati"
                                                   value="@Model.BitisSaati.ToString(@"hh\:mm")" />
                                            <span asp-validation-for="BitisSaati" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Aktif Mi -->
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox"
                                       asp-for="AktifMi" id="aktifMiSwitch">
                                <label class="form-check-label" for="aktifMiSwitch">
                                    Müsaitlik Saati Aktif
                                </label>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Güncelle
                            </button>
                            <a asp-action="Index" asp-route-antrenorId="@Model.AntrenorId" class="btn btn-secondary">
                                <i class="fas fa-times"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Bitiş saatinin başlangıçtan sonra olmasını kontrol et
            $('#baslangicSaati, #bitisSaati').change(function() {
                var baslangic = $('#baslangicSaati').val();
                var bitis = $('#bitisSaati').val();

                if (baslangic && bitis && baslangic >= bitis) {
                    alert('Bitiş saati başlangıç saatinden sonra olmalıdır.');
                    $('#bitisSaati').val('');
                }
            });
        });
    </script>
}