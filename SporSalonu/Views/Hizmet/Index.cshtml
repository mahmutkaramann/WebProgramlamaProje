@model IEnumerable<YeniSalon.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Hizmet Yönetimi</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Hizmet Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtreleme Formu -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="kategori" class="form-label">Kategori</label>
                    <select name="kategori" class="form-select" onchange="this.form.submit()">
                        <option value="">Tüm Kategoriler</option>
                        @foreach (var kategori in ViewBag.Kategoriler)
                        {
                            <option value="@kategori" selected="@(ViewBag.SeciliKategori == kategori)">@kategori</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Durum</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="aktifMi" id="aktif" value="true"
                                   checked="@((bool?)ViewBag.AktifMi == true)" onchange="this.form.submit()">
                            <label class="form-check-label" for="aktif">Aktif</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="aktifMi" id="pasif" value="false"
                                   checked="@((bool?)ViewBag.AktifMi == false)" onchange="this.form.submit()">
                            <label class="form-check-label" for="pasif">Pasif</label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Hizmetler Tablosu -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Hizmet Adı</th>
                            <th>Kategori</th>
                            <th>Süre (dk)</th>
                            <th>Ücret (₺)</th>
                            <th>Salon</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.HizmetId" class="text-decoration-none">
                                        @item.HizmetAdi
                                    </a>
                                </td>
                                <td>@item.Kategori</td>
                                <td>@item.SureDakika</td>
                                <td>@item.Ucret.ToString("C2")</td>
                                <td>@item.Salon?.SalonAdi</td>
                                <td>
                                    @if (item.AktifMi)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.HizmetId" class="btn btn-info" title="Detay">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.HizmetId" class="btn btn-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="AssignAntrenor" asp-route-id="@item.HizmetId" class="btn btn-secondary" title="Antrenör Ata">
                                            <i class="fas fa-user-plus"></i>
                                        </a>
                                        @if (item.AktifMi)
                                        {
                                            <form asp-action="Deactivate" method="post" style="display:inline">
                                                <input type="hidden" name="id" value="@item.HizmetId" />
                                                <button type="submit" class="btn btn-outline-danger" title="Pasif Yap"
                                                        onclick="return confirm('Bu hizmeti pasif yapmak istediğinize emin misiniz?')">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="Activate" method="post" style="display:inline">
                                                <input type="hidden" name="id" value="@item.HizmetId" />
                                                <button type="submit" class="btn btn-outline-success" title="Aktif Yap">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>