@model YeniSalon.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Detayları";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Hizmet Detayları</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Listeye Dön
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Model.HizmetAdi</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Hizmet Adı:</dt>
                        <dd class="col-sm-9">@Model.HizmetAdi</dd>

                        <dt class="col-sm-3">Kategori:</dt>
                        <dd class="col-sm-9">@Model.Kategori</dd>

                        <dt class="col-sm-3">Süre:</dt>
                        <dd class="col-sm-9">@Model.SureDakika dakika</dd>

                        <dt class="col-sm-3">Ücret:</dt>
                        <dd class="col-sm-9">@Model.Ucret.ToString("C2")</dd>

                        <dt class="col-sm-3">Salon:</dt>
                        <dd class="col-sm-9">@Model.Salon?.SalonAdi</dd>

                        <dt class="col-sm-3">Açıklama:</dt>
                        <dd class="col-sm-9">@Model.Aciklama</dd>

                        <dt class="col-sm-3">Durum:</dt>
                        <dd class="col-sm-9">
                            @if (Model.AktifMi)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Bu Hizmeti Veren Antrenörler</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Antrenorler != null && ((List<Antrenor>)ViewBag.Antrenorler).Count > 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var antrenor in (List<Antrenor>)ViewBag.Antrenorler)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@antrenor.Ad @antrenor.Soyad</strong><br>
                                        <small class="text-muted">@antrenor.UzmanlikAlanlari</small>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">
                                        @antrenor.DeneyimYili yıl
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            Bu hizmete henüz antrenör atanmamış.
                        </div>
                    }
                    <div class="mt-3">
                        <a asp-action="AssignAntrenor" asp-route-id="@Model.HizmetId" class="btn btn-primary btn-sm w-100">
                            <i class="fas fa-user-plus"></i> Antrenör Ata
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <div class="btn-group d-flex" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.HizmetId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.HizmetId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>