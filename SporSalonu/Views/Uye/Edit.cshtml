@model YeniSalon.Controllers.EditUyeViewModel

@{
    ViewData["Title"] = "Üye Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Üye Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h5 class="mb-3">Hesap Bilgileri</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Rol" class="form-label"></label>
                                <select asp-for="Rol" class="form-select" asp-items="ViewBag.Roller">
                                    <option value="">Seçiniz</option>
                                </select>
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="AktifMi" class="form-check-input" />
                                <label asp-for="AktifMi" class="form-check-label"></label>
                            </div>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Kişisel Bilgiler</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ad" class="form-label"></label>
                                <input asp-for="Ad" class="form-control" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Soyad" class="form-label"></label>
                                <input asp-for="Soyad" class="form-control" />
                                <span asp-validation-for="Soyad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TCKimlikNo" class="form-label"></label>
                                <input asp-for="TCKimlikNo" class="form-control" />
                                <span asp-validation-for="TCKimlikNo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DogumTarihi" class="form-label"></label>
                                <input asp-for="DogumTarihi" type="date" class="form-control" />
                                <span asp-validation-for="DogumTarihi" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cinsiyet" class="form-label"></label>
                                <select asp-for="Cinsiyet" class="form-select">
                                    <option value="">Seçiniz</option>
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                </select>
                                <span asp-validation-for="Cinsiyet" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Adres" class="form-label"></label>
                            <textarea asp-for="Adres" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Fiziksel Özellikler</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Boy" class="form-label"></label>
                                <input asp-for="Boy" class="form-control" type="number" min="100" max="250" />
                                <span asp-validation-for="Boy" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Kilo" class="form-label"></label>
                                <input asp-for="Kilo" class="form-control" type="number" step="0.1" min="30" max="200" />
                                <span asp-validation-for="Kilo" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Üyelik Bilgileri</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UyelikBaslangic" class="form-label"></label>
                                <input asp-for="UyelikBaslangic" type="date" class="form-control" />
                                <span asp-validation-for="UyelikBaslangic" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="UyelikBitis" class="form-label"></label>
                                <input asp-for="UyelikBitis" type="date" class="form-control" />
                                <span asp-validation-for="UyelikBitis" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UyelikTuru" class="form-label"></label>
                                <select asp-for="UyelikTuru" class="form-select">
                                    <option value="">Seçiniz</option>
                                    <option value="Aylik">Aylık</option>
                                    <option value="UcAylik">3 Aylık</option>
                                    <option value="AltıAylik">6 Aylık</option>
                                    <option value="Yillik">Yıllık</option>
                                </select>
                                <span asp-validation-for="UyelikTuru" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ProfilFotoUrl" class="form-label"></label>
                                <input asp-for="ProfilFotoUrl" class="form-control" placeholder="https://..." />
                                <span asp-validation-for="ProfilFotoUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Şifre Değiştir (Opsiyonel)</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewPassword" class="form-label"></label>
                                <input asp-for="NewPassword" type="password" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmNewPassword" class="form-label"></label>
                                <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Güncelle
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye"></i> Detay
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}