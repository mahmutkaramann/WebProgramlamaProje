@model IEnumerable<YeniSalon.Models.ApplicationUser>

@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Üye Yönetimi</h1>
        <div>
            <a asp-action="Create" class="btn btn-primary me-2">
                <i class="fas fa-user-plus"></i> Yeni Üye
            </a>
            <a asp-action="Statistics" class="btn btn-info me-2">
                <i class="fas fa-chart-bar"></i> İstatistikler
            </a>
            <a asp-action="ExportToCsv" class="btn btn-success">
                <i class="fas fa-file-export"></i> CSV İndir
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtreleme Formu -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="search" class="form-label">Ara</label>
                    <input type="text" class="form-control" name="search" value="@ViewBag.Search"
                           placeholder="Ad, Soyad, Email, TC...">
                </div>
                <div class="col-md-2">
                    <label for="cinsiyet" class="form-label">Cinsiyet</label>
                    <select name="cinsiyet" class="form-select">
                        <option value="">Tümü</option>
                        @foreach (var cinsiyet in ViewBag.CinsiyetListesi)
                        {
                            <option value="@cinsiyet" selected="@(ViewBag.Cinsiyet == cinsiyet.ToString())">
                                @cinsiyet
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="uyelikTuru" class="form-label">Üyelik Türü</label>
                    <select name="uyelikTuru" class="form-select">
                        <option value="">Tümü</option>
                        @foreach (var tur in ViewBag.UyelikTuruListesi)
                        {
                            <option value="@tur" selected="@(ViewBag.UyelikTuru == tur.ToString())">
                                @tur
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Durum</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="aktifMi" id="aktif" value="true"
                                   checked="@((bool?)ViewBag.AktifMi == true)">
                            <label class="form-check-label" for="aktif">Aktif</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="aktifMi" id="pasif" value="false"
                                   checked="@((bool?)ViewBag.AktifMi == false)">
                            <label class="form-check-label" for="pasif">Pasif</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter"></i> Filtrele
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-redo"></i> Sıfırla
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Üyeler Tablosu -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a asp-action="Index"
                                   asp-route-sortBy="Ad"
                                   asp-route-sortOrder="@(ViewBag.SortBy == "Ad" && ViewBag.SortOrder == "asc" ? "desc" : "asc")"
                                   asp-route-search="@ViewBag.Search"
                                   asp-route-cinsiyet="@ViewBag.Cinsiyet"
                                   asp-route-uyelikTuru="@ViewBag.UyelikTuru"
                                   asp-route-aktifMi="@ViewBag.AktifMi">
                                    Ad
                                    @if (ViewBag.SortBy == "Ad")
                                    {
                                        <i class="fas fa-sort-@(ViewBag.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>Soyad</th>
                            <th>Email</th>
                            <th>TC Kimlik No</th>
                            <th>Cinsiyet</th>
                            <th>Üyelik Türü</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Ad</td>
                                <td>@item.Soyad</td>
                                <td>@item.Email</td>
                                <td>@item.TCKimlikNo</td>
                                <td>@item.Cinsiyet</td>
                                <td>
                                    @if (item.UyelikTuru.HasValue)
                                    {
                                        <span class="badge bg-secondary">@item.UyelikTuru</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Belirtilmemiş</span>
                                    }
                                </td>
                                <td>
                                    @if (item.AktifMi)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Detay">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="ResetPassword" asp-route-id="@item.Id" class="btn btn-secondary" title="Şifre Sıfırla">
                                            <i class="fas fa-key"></i>
                                        </a>
                                        @if (item.AktifMi)
                                        {
                                            <form asp-action="Deactivate" method="post" style="display:inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-outline-danger" title="Pasif Yap"
                                                        onclick="return confirm('Bu üyeyi pasif yapmak istediğinize emin misiniz?')">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="Activate" method="post" style="display:inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-outline-success" title="Aktif Yap">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Sayfalama -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-search="@ViewBag.Search"
                                   asp-route-cinsiyet="@ViewBag.Cinsiyet"
                                   asp-route-uyelikTuru="@ViewBag.UyelikTuru"
                                   asp-route-aktifMi="@ViewBag.AktifMi"
                                   asp-route-sortBy="@ViewBag.SortBy"
                                   asp-route-sortOrder="@ViewBag.SortOrder">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }

            <div class="text-muted text-center mt-2">
                Toplam @ViewBag.TotalRecords kayıt, Sayfa @ViewBag.Page/@ViewBag.TotalPages
            </div>
        </div>
    </div>
</div>