@model IEnumerable<YeniSalon.Models.Randevu>

@{
    ViewData["Title"] = "Onay Bekleyen Randevular";
}

<div class="container">
    <h1>Onay Bekleyen Randevular</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Üye</th>
                    <th>Antrenör</th>
                    <th>Hizmet</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Süre</th>
                    <th>Not</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Kullanici?.Ad @item.Kullanici?.Soyad</td>
                        <td>@item.Antrenor?.Ad @item.Antrenor?.Soyad</td>
                        <td>@item.Hizmet?.HizmetAdi</td>
                        <td>@item.RandevuTarihi.ToString("dd.MM.yyyy")</td>
                        <td>@item.RandevuTarihi.ToString("HH:mm")</td>
                        <td>@item.Hizmet?.SureDakika dk</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Not))
                            {
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="popover" title="Not" data-bs-content="@item.Not">
                                    <i class="fas fa-sticky-note"></i>
                                </button>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <form asp-action="Approve" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.RandevuId" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="fas fa-check"></i> Onayla
                                    </button>
                                </form>
                                <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal-@item.RandevuId">
                                    <i class="fas fa-times"></i> Reddet
                                </button>
                                <a asp-action="Details" asp-route-id="@item.RandevuId" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>

                            <!-- Reddetme Modal -->
                            <div class="modal fade" id="rejectModal-@item.RandevuId" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Randevu Reddet</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form asp-action="Reject" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.RandevuId" />
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="reason-@item.RandevuId" class="form-label">Reddetme Nedeni (İsteğe bağlı):</label>
                                                    <textarea id="reason-@item.RandevuId" name="reason" class="form-control" rows="3"></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                <button type="submit" class="btn btn-danger">Reddet</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Onay bekleyen randevu bulunmamaktadır.
        </div>
    }

    <div>
        <a asp-action="Index" class="btn btn-secondary">Tüm Randevular</a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Popover'ları başlat
            $('[data-bs-toggle="popover"]').popover();
        });
    </script>
}