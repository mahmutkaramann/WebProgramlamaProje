@model IEnumerable<YeniSalon.Models.Antrenor>
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid p-0">
    <!-- Hero Banner Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center py-5">
                <div class="align-content-xl-center py-5">
                    <div class="hero-slider rounded shadow overflow-hidden">
                        <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Images/sfitness.jpg" class="d-block w-100" alt="Slide 1" style="height: 400px; object-fit: cover;">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Images/skarete.jpg" class="d-block w-100" alt="Slide 2" style="height: 400px; object-fit: cover;">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Images/spilates.jpg" class="d-block w-100" alt="Slide 3" style="height: 400px; object-fit: cover;">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Önceki</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Sonraki</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Welcome Section -->
    <section class="welcome-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="text-center mb-5">
                        <h2 class="display-5 text-danger fw-bold mb-3">SporSalonu'na Hoş Geldiniz!</h2>
                        <p class="lead text-muted">Profesyonel eğitmenler, modern ekipmanlar ve kişiye özel programlarla sağlıklı yaşam yolculuğunuzda yanınızdayız.</p>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm p-4">
                        <p class="mb-0">
                            SporSalonu olarak misyonumuz, her yaştan ve seviyeden bireye sağlıklı yaşam alışkanlıkları kazandırmaktır.
                            10 yılı aşkın tecrübemizle, uzman antrenör kadromuz ve son teknoloji ekipmanlarımızla hizmetinizdeyiz.
                            Kişiye özel hazırlanan antrenman programları, beslenme danışmanlığı ve motivasyonel koçluk hizmetlerimizle
                            fitness hedeflerinize ulaşmanızı sağlıyoruz.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Services -->
    <section class="services-section py-5 bg-light">
        <div class="container">
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h2 class="display-6 text-danger fw-bold mb-3">Popüler Hizmetlerimiz</h2>
                    <p class="text-muted">En çok tercih edilen hizmetlerimizi keşfedin</p>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="card service-card h-100 border-0 shadow-sm">
                        <img src="~/Images/boks.jpg" class="card-img-top" alt="Boks" style="height: 250px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-danger">Profesyonel Boks Eğitimi</h5>
                            <p class="card-text text-muted">Teknik boks eğitimi, kondisyon çalışmaları ve ring antrenmanları ile kendinizi geliştirin.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-danger fw-bold">₺130.00/ay</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="card service-card h-100 border-0 shadow-sm">
                        <img src="~/Images/yoga.jpg" class="card-img-top" alt="Yoga" style="height: 250px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-danger">Yoga & Meditasyon</h5>
                            <p class="card-text text-muted">Zihin-beden bağlantınızı güçlendirin, esnekliğinizi artırın ve stresten arının.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-danger fw-bold">₺199.99/ay</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="card service-card h-100 border-0 shadow-sm">
                        <img src="~/Images/fitness.jpg" class="card-img-top" alt="Pilates" style="height: 250px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-danger">Fitness Eğitimi</h5>
                            <p class="card-text text-muted">Core kaslarınızı güçlendirin, duruşunuzu düzeltin ve vücut kontrolünüzü artırın.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-danger fw-bold">₺89.99/ay</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Popular Sports & Trainers -->
    <section class="popular-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h4 class="card-title text-danger mb-4">En Çok Tercih Edilenler</h4>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Boks</span>
                                    <span class="badge bg-danger rounded-pill">45 kişi</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Yoga</span>
                                    <span class="badge bg-danger rounded-pill">38 kişi</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Pilates</span>
                                    <span class="badge bg-danger rounded-pill">32 kişi</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Karate</span>
                                    <span class="badge bg-danger rounded-pill">28 kişi</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Zumba</span>
                                    <span class="badge bg-danger rounded-pill">25 kişi</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title text-danger mb-4">En Çok Tercih Edilen Antrenörlerimiz</h4>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="trainer-card d-flex">
                                        <div class="trainer-img me-3">
                                            <img src="~/Images/kboks.jpg" class="rounded-circle" alt="Trainer" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="trainer-info">
                                            <h6 class="fw-bold mb-1">Yusuf Öngel</h6>
                                            <p class="text-muted small mb-2">Boks Antrenörü - 8 yıl deneyim</p>
                                            <p class="small text-muted mb-0">Profesyonel boksör ve milli takım antrenörü...</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="trainer-card d-flex">
                                        <div class="trainer-img me-3">
                                            <img src="~/Images/kyoga.jpg" class="rounded-circle" alt="Trainer" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="trainer-info">
                                            <h6 class="fw-bold mb-1">Elif Deniz</h6>
                                            <p class="text-muted small mb-2">Yoga Eğitmeni - 5 yıl deneyim</p>
                                            <p class="small text-muted mb-0">Uluslararası yoga sertifikalı, meditasyon uzmanı...</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="trainer-card d-flex">
                                        <div class="trainer-img me-3">
                                            <img src="~/Images/kfitness.jpg" class="rounded-circle" alt="Trainer" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="trainer-info">
                                            <h6 class="fw-bold mb-1">Ahmet Yılmaz</h6>
                                            <p class="text-muted small mb-2">Fitness Koçu - 10 yıl deneyim</p>
                                            <p class="small text-muted mb-0">Kişisel antrenörlük ve beslenme danışmanlığı...</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="trainer-card d-flex">
                                        <div class="trainer-img me-3">
                                            <img src="~/Images/kpilates.jpg" class="rounded-circle" alt="Trainer" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="trainer-info">
                                            <h6 class="fw-bold mb-1">Zeynep Şahin</h6>
                                            <p class="text-muted small mb-2">Pilates Eğitmeni - 6 yıl deneyim</p>
                                            <p class="small text-muted mb-0">Reformer pilates ve hamile pilatesi uzmanı...</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="trainer-card d-flex">
                                        <div class="trainer-img me-3">
                                            <img src="~/Images/kkarate.jpg" class="rounded-circle" alt="Trainer" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="trainer-info">
                                            <h6 class="fw-bold mb-1">Can Öztürk</h6>
                                            <p class="text-muted small mb-2">Karate Antrenörü - 12 yıl deneyim</p>
                                            <p class="small text-muted mb-0">Siyah kuşak, ulusal şampiyonlukları bulunmakta...</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="trainer-card d-flex">
                                        <div class="trainer-img me-3">
                                            <img src="~/Images/kzumba.jpg" class="rounded-circle" alt="Trainer" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="trainer-info">
                                            <h6 class="fw-bold mb-1">Elif Yıldız</h6>
                                            <p class="text-muted small mb-2">Zumba Eğitmeni - 4 yıl deneyim</p>
                                            <p class="small text-muted mb-0">Enerjik dersleriyle ünlü, Latin dansları uzmanı...</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
